{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "name": "select and translate",
  "version": "0.0.1",
  "description": "Select area on your screen and translate it!",
  "background": {
    "service_worker": "assets/js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/js/content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/img/icon-16.png",
      "24": "assets/img/icon-24.png",
      "32": "assets/img/icon-32.png"
    },
    "default_popup": "popup.html",
    "default_title": "Select and Translate"
  },
  "icons": {
    "16": "assets/img/icon-16.png",
    "48": "assets/img/icon-48.png",
    "128": "assets/img/icon-128.png",
    "256": "assets/img/icon-256.png"
  },
  "permissions": ["scripting", "tabs", "activeTab", "notifications", "storage"],
  "host_permissions": ["<all_urls>"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Ctrl+Shift+Space"
      },
      "description": "Select and Translate"
    },
    "select_and_translate": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Ctrl+Shift+Space"
      },
      "description": "Select and Translate"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
